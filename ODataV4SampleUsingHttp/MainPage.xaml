    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Product List" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="LoadProductsButton" 
                        Content="Load Expensive Products" 
                        Click="LoadProducts_Click" 
                        Padding="10,5" 
                        Margin="0,0,10,0"/>
                <TextBlock x:Name="StatusText" 
                           VerticalAlignment="Center" 
                           Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="MyDataGrid" 
                  Grid.Row="1" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  LoadingRow="MyDataGrid_LoadingRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBlock x:Name="CountText" VerticalAlignment="Center"/>
            <TextBlock x:Name="LoadingIndicator" 
                       Text="Loading more..." 
                       Margin="20,0,0,0" 
                       Foreground="Blue"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
